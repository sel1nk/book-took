        <Border HorizontalAlignment="Left" VerticalAlignment="Top" 
        Width="400" Height="75" Margin="1,10,0,0" 
        CornerRadius="20" BorderBrush="White" BorderThickness="2">
            <Image x:Name="search" Stretch="UniformToFill" 
